
<h1>Ventas</h1>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Lista de Ventas</div>

  <!-- Table -->
  <table class="table">
    <thead>
    <tr>
      <th>Cod</th>
      <th>Categoria</th>
      <th>Detail</th>
      <th>Category</th>
      <th>Value</th>
      <th>Discount</th>
      <th>Tax</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.cod %></td>
		<td><%= sale.category %></td>
		<td><%= sale.detail %></td>
		<td><%= sale.value %></td>
		<td><%= sale.discount %></td>
		<td><%= sale.tax %></td>
		<td><%= sale.total %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<br>

